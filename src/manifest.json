{
  "manifest_version": 3,
  "name": "Reviews",
  "version": "0.0.5",
  "description": "Показывает отзывы о преподавателях на сайте my.itmo",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "icons": {
        "16":"icons/16.png",
        "32":"icons/32.png",
        "48":"icons/48.png",
        "128":"icons/128.png"
  },
  "background": {},

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://my.itmo.ru/*", "https://dev.my.itmo.su/*"],
      "js": ["injector.js"],
      "css": ["styles.css"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}